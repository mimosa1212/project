#include <stdio.h>
#include <string.h>

int main(void)
{
    int i=0;
    int is_upper, is_lower, is_digit;
    char password[30];

    while(1)
    {
        printf("숫자,대문자,소문자를 섞은 암호를 생성하시오:");
        gets(password);

        is_upper=is_lower=is_digit=0;
        while(i<strlen(password)
          {
              if(password[i]>='0' && password[i]<='9')
                is_digit = 1;
                else if(password[i]>='A' && password[i]<='Z')
                    is_upper = 1;
                else if(password[i]>='a' && password[i]<='z')
                    is_lower = 1;
                i++;
          }
        if(is_lower*is_upper*is_digit != 0)
        {
            printf("적절한 암호입니다.\n");
            break;
        }
        else("숫자, 소문자, 대문자를 모두 섞어서 암호를 다시 만드세요.\n");
    }
    
    return 0;
}
